{
  "editor.tabSize": 2,
  // ファイル保存時に prettier で format するように
  // ref: https://github.com/hatena/eslint-config-hatena/blob/main/docs/integration.md#vscode
  "editor.formatOnSave": true,
  // ファイル保存時に eslint --fix するように
  // NOTE: eslint は VSCode からは formatter として扱われない。
  // そのため fixOnSave するには `editor.formatOnSave` ではなく `editor.codeActionsOnSave` を使う必要がある。
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
